{
  "cli": {
    "version": ">= 7.3.2",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "APP_VARIANT": "development",
        "APP_ENV": "development"
      },
      "channel": "development",
      "ios": {
        "buildConfiguration": "Debug"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug"
      }
    },
    "development-simulator": {
      "extends": "development",
      "ios": {
        "simulator": true
      },
      "channel": "development",
      "env": {
        "APP_VARIANT": "development",
        "APP_ENV": "development"
      }
    },
    "preview": {
      "distribution": "internal",
      "env": {
        "APP_VARIANT": "preview",
        "APP_ENV": "preview"
      },
      "channel": "preview",
      "ios": {
        "buildConfiguration": "Release"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      }
    },
    "production": {
      "autoIncrement": true,
      "env": {
        "APP_VARIANT": "production",
        "APP_ENV": "production"
      },
      "channel": "production",
      "ios": {
        "buildConfiguration": "Release",
        "image": "macos-sequoia-15.3-xcode-16.2"
      },
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease",
        "image": "ubuntu-22.04-jdk-17-ndk-r21e"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "shedrachjonah22@gmail.com",
        "ascAppId": "6670169766",
        "appleTeamId": "D84VV5F569"
      },
      "android": {
        "serviceAccountKeyPath": "./ServiceAccountRahapay.json",
        "track": "production"
      }
    }
  }
}