{
  "expo": {
    "name": "RahaPay",
    "slug": "rahapay-mobile-app",
    "version": "1.0.0",
    "runtimeVersion": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#5136C1"
    },
    "updates": {
      "enabled": true,
      "url": "https://u.expo.dev/6c9dcd70-fdd4-4f28-a0d5-e1d1a6680543",
      "fallbackToCacheTimeout": 0,
      "checkAutomatically": "ON_LOAD"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.app.rahapay",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSFaceIDUsageDescription": "Allow RahaPay to use Face ID for secure login"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#5136C1"
      },
      "package": "com.app.rahapay",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "userInterfaceStyle": "automatic",
    "plugins": [
      "expo-font",
      "expo-localization",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/small-logo.png",
          "color": "#5136C1"
        }
      ],
      [
        "expo-secure-store",
        {
          "configureAndroidBackup": true,
          "faceIDPermission": "Allow $(PRODUCT_NAME) to access your Face ID biometric data."
        }
      ],
      "expo-local-authentication",
      [
        "expo-contacts",
        {
          "contactsPermission": "Allow $(PRODUCT_NAME) to access your contacts."
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "rahapay",
          "organization": "voltcore-technologies"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "6c9dcd70-fdd4-4f28-a0d5-e1d1a6680543"
      }
    },
    "description": "RahaPay Mobile App - Secure payments made simple",
    "cli": {
      "version": ">= 7.8.2",
      "appVersionSource": "remote"
    },
    "build": {
      "development": {
        "developmentClient": true,
        "distribution": "internal",
        "env": {
          "APP_VARIANT": "development",
          "APP_ENV": "development"
        },
        "channel": "development",
        "ios": {
          "buildConfiguration": "Debug"
        },
        "android": {
          "buildType": "apk"
        }
      },
      "development-simulator": {
        "extends": "development",
        "ios": {
          "simulator": true
        },
        "channel": "development-simulator"
      },
      "preview": {
        "distribution": "internal",
        "env": {
          "APP_VARIANT": "preview",
          "APP_ENV": "preview"
        },
        "channel": "preview",
        "ios": {
          "buildConfiguration": "Release"
        },
        "android": {
          "buildType": "apk"
        }
      },
      "production": {
        "autoIncrement": true,
        "env": {
          "APP_VARIANT": "production",
          "APP_ENV": "production"
        },
        "channel": "production",
        "ios": {
          "buildConfiguration": "Release"
        },
        "android": {
          "buildType": "app-bundle"
        }
      }
    },
    "submit": {
      "production": {
        "ios": {
          "appleId": "shedrachjonah22@gmail.com",
          "ascAppId": "367d0cfa-1475-4062-8ce2-436d9f7b7508",
          "appleTeamId": "D84VV5F569"
        },
        "android": {
          "serviceAccountKeyPath": "./ServiceAccountRahapay.json",
          "track": "production"
        }
      }
    }
  }
}